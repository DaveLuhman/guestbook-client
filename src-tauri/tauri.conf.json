{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "guestbook",
  "version": "1.0.0",
  "identifier": "com.adosoftware.guestbook.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build:assets",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Swipe or Scan your OneCard",
        "label": "main",
        "fullscreen": true
      },
      {
        "title": "Guestbook Setup",
        "width": 800,
        "height": 600,
        "center": true,
        "visible": false,
        "label": "firstRun",
        "url": "/firstRun.html"
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' customprotocol: asset:",
        "connect-src": "ipc: http://ipc.localhost",
        "font-src": ["https://fonts.gstatic.com"],
        "img-src": "'self' asset: http://asset.localhost blob: data:",
        "style-src": "'unsafe-inline' 'self' https://fonts.googleapis.com"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../public/firstRun.html",
      "../public/styles.css"
    ],
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libgtk-3-0",
          "libappindicator3-1"
        ],
        "files": {
          "/usr/share/guestbook-kiosk/README.md": "../README.md",
          "/usr/share/guestbook-kiosk/appliance-setup": "../appliance-setup/"
        },
        "desktopTemplate": "desktop.desktop"
      }
    }
  }
}
